<div id="addSubscriptionModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header mb-4 border-0 align-items-start">
        <h2 class="mb-0">Add a new Subscription</h2>
        <button type="button" class="btn-close mt-1" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%# Form Content %>
      <select class="form-select select required" name="resources" id="resources">
        <% @resources.each do |resource| %>
          <option value="<%= resource.name %>"><%= resource.name %></option>
        <% end %>
      </select>
      <%= simple_form_for(subscription) do |f| %>
        <div class="modal-body mb-4 border-0">
          <%= f.association :plan, collection: @plans %>
          <%= f.input :start_date, html5: true %>
          <%= f.input :renewal_date, html5: true %>
          <%= f.input :region %>
          <%= f.input :notes %>
        </div>
        <div class="modal-footer d-flex justify-content-between border-0">
          <%= link_to "Cancel", class: 'btn link-unstyled p-0 text-primary', data_bs_dismiss: 'modal' %>
          <%= f.submit 'Add', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
